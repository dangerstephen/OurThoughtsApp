<!DOCTYPE html>
<html lang="en">

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">

<title>Thoughts App</title>


<!-- STYLESHEETS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
<!-- Compiled and minified CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css">
<link rel="stylesheet" href="./styles/main.css">

<!-- Google font -->
<link href="https://fonts.googleapis.com/css?family=Londrina+Outline|Roboto" rel="stylesheet">
<!-- Materalize CDN's -->
<!-- Compiled and minified JavaScript -->



<!-- VENDOR SCRIPTS -->

<!--JQuery CDN  -->
<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
<!-- Handlebars CDN -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.5/handlebars.min.js"></script>

<!-- APPLICATION SCRIPTS -->
<script src="./scripts/app.js"></script>

</head>

<body>

    <nav class="N/A transparent z-depth-0">
        <div class="nav-wrapper">
            <a href="/" class="brand-logo"><h3><b>Our Thoughts</b></h3></a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li>Welcome!
                    <%= user.email %>
                </li>
                <li><a id="logout" href="/logout" class="btn btn-default">Log Out</a></li>
            </ul>
        </div>
    </nav>


    <div class="container text-center">
        <div class="thought-row">
            <div class="col-md-8 col-md-offset-2">
                <h3>Add a new thought</h3>
                <hr>
                <form id="newThought-form">
                    <div class="form-group">
                        <input type="messeage" name="description" class="form-control" placeholder="Your Thought Here" autofocus>
                    </div>

                    <div class="form-group">
                        <label for="exampleSelect1">Select Category</label>
                        <select name="category" class="form-control" id="exampleSelect1">
                          <option value="Happy">Happy</option>
                          <option value="Weird">Weird</option>
                          <option value="Sad">Sad</option>
                          <option value="Funny">Funny</option>
                          <option value="Random">Funny</option>

                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary">Add to collection</button>
            </div>
            </form>
        </div>
    </div>
    </div>
    <div id="thoughtTarget">
        <!-- handlebar template -->
        <script id="thoughts-template" type="text/x-handlebars-template">

            {{#each thoughts}}
            <div class="eachThought">
            <p>
                <b>{{description}}</b> <br> Category: {{category}}

                <button type="button" name="button" class="deleteBtn btn btn-danger pull-right" data-id={{_id}}>Delete</button>
                <button type="button" name="button" class="UpdateBtn btn btn-warning pull-right" data-id={{_id}}>Update</button>
            </p>
            </div>
            {{/each}}
        </script>
    </div>
    <footer class="footer-container">
        <div class="footer-text">
            Created By <a href="https://www.linkedin.com/in/myungok-starkim" target="_blank">Star</a> & <a href="https://www.linkedin.com/in/stephen-dangerfield-a46372128" target="_blank">Stephen</a>
        </div>
    </footer>

    <!--  Scripts-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>

</body>

</html>
